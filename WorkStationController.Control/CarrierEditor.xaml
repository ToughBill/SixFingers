<UserControl x:Class="WorkstationController.Control.CarrierEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Name="LabelStyle" TargetType="Label">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Right"/>
            </Style>
            <Style x:Name="TextBoxStyle" TargetType="TextBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <!--Name-->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Carrier Name:"/>
            <TextBox MinWidth="100" Margin="3,2,0,2"/>
        </StackPanel>
        
        <!--Dimensions-->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="X" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="Y" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Dimensions:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="3,2,2,2"/>
        <TextBox Grid.Row="2" Grid.Column="2" Margin="3,2,2,2"/>
        <Label Grid.Row="2" Grid.Column="3" Content="(mm)" HorizontalAlignment="Left"/>
        <!--ReferenceOffset-->
        <TextBlock Grid.Row="3" Grid.Column="1" Text="X" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="Y" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Reference Offset:"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="3,2,2,2"/>
        <TextBox Grid.Row="4" Grid.Column="2" Margin="3,2,2,2"/>
        <Label Grid.Row="4" Grid.Column="3" Content="(mm)" HorizontalAlignment="Left"/>
        <!--Grid-->
        <Label Grid.Row="5" Grid.Column="0" Content="Grid:"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="3,2,2,2"/>
        <!--Labware Layout Grid-->
        <DataGrid Grid.Row="6" Grid.ColumnSpan="4" Margin="3">
            
        </DataGrid>
        <!--Save button-->
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Right">
            <Button MinWidth="100" Content="Save" Margin="0,5,5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
