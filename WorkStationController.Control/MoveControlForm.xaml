<Window x:Class="WorkstationController.Control.MoveControlForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="运动控制" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label>X:</Label>
                <TextBox Text="{Binding X}" Width="60"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label>Y:</Label>
                <TextBox Text="{Binding Y}" Width="60"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label>Z:</Label>
                <TextBox Text="{Binding Z}" Width="60"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
