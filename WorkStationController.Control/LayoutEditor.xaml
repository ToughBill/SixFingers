<UserControl x:Class="WorkstationController.Control.LayoutEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkstationController.Control"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <GroupBox Header="Script" Grid.Row="0" Grid.Column="0">
            
        </GroupBox>
        <GroupBox Header="Layout" Grid.Row="1" Grid.Column="0">
            <local:WorktableGrid x:Name="_worktable" Grid.Row="0" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </GroupBox>
        <DockPanel Grid.Row="2">
            <Button Content="RUN" Background="Green" DockPanel.Dock="Left" Margin="10" Width="100"/>
            <Button Content="RESUME" Background="Blue" DockPanel.Dock="Left" Margin="10" Width="100"/>
            <Button Content="STOP" Background="Red" DockPanel.Dock="Left" Margin="10" Width="100"/>
            <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="Save" DockPanel.Dock="Right" Width="120" Height="40" Margin="10"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
