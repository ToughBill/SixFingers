<Window x:Class="WorkstationController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workstation Controller 0.1" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!--Main control tabs-->
        <Border BorderThickness="1" Grid.Row="0"  BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <!--Item or operation selection-->
                <Label Grid.Row="0" Content="ItemItem or operation selection"/>
                
                <!--Splitter-->
                <GridSplitter Grid.Column="1" ResizeDirection="Columns" Width="2" MinWidth="2" VerticalAlignment="Stretch"/>
                
                <!--Tabs for operations-->
                <TabControl Grid.Column="2">
                    <TabItem Header="Labware"/>
                    <TabItem Header="Carrier"/>
                    <TabItem Header="Layout"/>
                </TabControl>
            </Grid>
        </Border>

        <!--Splitter-->
        <GridSplitter Grid.Row="1" ResizeDirection="Rows" Height="2" MinHeight="2" HorizontalAlignment="Stretch"/>

        <!--Output-->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="Black">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Background="LightGray">
                    <Label Content="Output"/>
                </DockPanel>
                <RichTextBox x:Name="rtb_Output"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
